<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TabHost
            android:id="@+id/tabhost"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/textView3"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:text="IP Address:"
                                android:textSize="20dp" />

                        <EditText
                                android:id="@+id/editText_IP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="192.168.137.50" />

                        <TextView
                                android:id="@+id/textView7"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:text="Port:"
                                android:textSize="20dp" />

                        <EditText
                                android:id="@+id/editText_port"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="5000" />
                    </GridLayout>

                    <Button
                            android:id="@+id/btn_server"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="开启服务器" />

                    <Button
                            android:id="@+id/btn_client"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="连接服务器" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="282dp">

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView_led1"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/led"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="LED1"
                                android:textSize="20dp" />

                        <Button
                                android:id="@+id/btn_led1"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_column="11"
                                android:layout_row="0"
                                android:text="亮灯" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView_led2"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/led"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="LED2"
                                android:textSize="20dp" />

                        <Button
                                android:id="@+id/btn_led2"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_column="11"
                                android:layout_row="1"
                                android:text="亮灯" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView_led3"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="2"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/led"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="LED3"
                                android:textSize="20dp" />

                        <Button
                                android:id="@+id/btn_led3"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_column="11"
                                android:layout_row="2"
                                android:text="亮灯" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView_BEEP"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="3"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/beep"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="BEEP"
                                android:textSize="20dp" />

                        <Button
                                android:id="@+id/btn_beep"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_column="11"
                                android:layout_row="3"
                                android:text="开启" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView1_temp"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="4"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/temp"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="温度"
                                android:textSize="20dp" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView2_temp"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="10"
                                android:layout_row="4"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0 ℃"
                                android:textSize="20dp" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView1_humi"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="5"
                                android:layout_weight="1"
                                android:drawableLeft="@mipmap/temp"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="湿度"
                                android:textSize="20dp" />

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView2_humi"
                                android:layout_width="126dp"
                                android:layout_height="wrap_content"
                                android:layout_column="10"
                                android:layout_row="5"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0 RH%"
                                android:textSize="20dp" />

                        <Button
                                android:id="@+id/btn_temp"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_column="11"
                                android:layout_row="4"
                                android:text="开始检测" />

                    </GridLayout>

                    <Button
                            android:id="@+id/btn_rst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="重置" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="322dp">

                        <com.iot.mycontrol.DrawableCenterTextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="接收区"
                                android:textSize="20dp" />

                        <TextView
                                android:id="@+id/textView_receive"
                                android:layout_width="match_parent"
                                android:layout_height="288dp"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:background="@drawable/textview_border"
                                android:scrollbars="vertical"
                                android:fadeScrollbars="false"
                                android:text="" />
                    </GridLayout>

                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="发送区"
                                android:textSize="20dp" />

                        <EditText
                                android:id="@+id/editText_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:ems="10"
                                android:inputType="textPersonName" />
                        <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="3"
                                android:text="清空" />
                        <Button
                                android:id="@+id/btn_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="2"
                                android:text="发送" />

                    </GridLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</androidx.constraintlayout.widget.ConstraintLayout>
